package com.ashindigo.utils;

import java.util.ArrayList;

import cpw.mods.fml.common.registry.GameRegistry;
import net.minecraft.creativetab.CreativeTabs;
import net.minecraft.entity.Entity;
import net.minecraft.item.Item;
import net.minecraft.item.ItemArmor;
import net.minecraft.item.ItemStack;

public class UtilsArmor extends ItemArmor {
	
	static ArrayList listitem = new ArrayList();
	static int runtime = 0;
	public static ArrayList itemlists = new ArrayList();
	public String MODID;
	public String textureName;

	public UtilsArmor(String unlocalizedName, ArmorMaterial material, String textureName, int type, String modid) {
	    super(material, 0, type);
	    this.textureName = textureName;
	    this.setUnlocalizedName(unlocalizedName);
	    this.setTextureName(modid + ":" + unlocalizedName);
	    setCreativeTab(CreativeTabs.tabCombat);
	    MODID = modid;
	}
	@Override
	public String getArmorTexture(ItemStack stack, Entity entity, int slot, String type)
	{
	    return MODID + ":armor/" + this.textureName + "_" + (this.armorType == 2 ? "2" : "1") + ".png";
	}
	
	/**
	 * Method that starts the automatic registration of items.
	 * Call in init method
	 * See:{@link UtilsMain.init}
	 */
	public static void register() {
		
		while(runtime < listitem.size()){
		GameRegistry.registerItem((Item) itemlists.get(runtime), ("indigoapi" + runtime));
		runtime++;
		}
}
}
