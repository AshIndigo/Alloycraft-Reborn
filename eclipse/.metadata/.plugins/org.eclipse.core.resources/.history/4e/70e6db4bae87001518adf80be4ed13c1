package com.ashindigo.utils;

import java.util.ArrayList;

import cpw.mods.fml.common.registry.GameRegistry;
import net.minecraft.block.Block;
import net.minecraft.block.material.Material;
import net.minecraft.creativetab.CreativeTabs;
import net.minecraft.item.Item;
import net.minecraft.item.ItemStack;

public class UtilsBlockOre extends UtilsBlock{

	public static Item Ingot;
	public static ArrayList listore = new ArrayList();
	public static ArrayList orelists = new ArrayList();

	public UtilsBlockOre(Material mat, String modid, String name, Item ingot) {
		super(mat, modid, name);
		setBlockName(modid + "_" + name);
		setCreativeTab(CreativeTabs.tabBlock);
		setBlockTextureName(modid + ":" + name);
		listblock.add(name);
		Ingot = ingot;
	}
	
	public UtilsBlockOre(Material mat) {
		super(mat);
	}

	public static void registerRecipes(){
		int oreruntime = 0;
		while(oreruntime < listore.size()){
		GameRegistry.addSmelting((Block) listore.get(oreruntime), new ItemStack (Ingot, 1), 5);
	}
	}
}

