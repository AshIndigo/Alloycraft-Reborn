package com.ashindigo.utils;

import java.util.ArrayList;
import java.util.Collection;
import java.util.Iterator;
import java.util.Set;

import com.ashindigo.alloycraft.AlloycraftMain;

import cpw.mods.fml.common.registry.GameRegistry;
import net.minecraft.creativetab.CreativeTabs;
import net.minecraft.item.Item;
import net.minecraft.item.ItemTool;

public class UtilsToolset extends ItemTool implements Set {
	
	static ArrayList listitem = new ArrayList();
	static ArrayList listtool = new ArrayList();
	static int runtime = 0;
	static String MODID;
	public static ArrayList itemlists = new ArrayList();
	UtilsToolset pickaxe = (UtilsToolset) listtool.get(0);
	UtilsToolset axe = (UtilsToolset) listtool.get(1);
	UtilsToolset sword = (UtilsToolset) listtool.get(2);
	UtilsToolset hoe = (UtilsToolset) listtool.get(3);
	UtilsToolset shovel = (UtilsToolset) listtool.get(4);

	public UtilsToolset(float p_i45333_1_, ToolMaterial p_i45333_2_, Set p_i45333_3_, String name, String modid) {
		super(p_i45333_1_, p_i45333_2_, p_i45333_3_);
		setUnlocalizedName(modid + "_" + name);
		setCreativeTab(CreativeTabs.tabMisc);
		setTextureName(modid + ":" + name);
		int repeat = 0;
		while(repeat != 5){
		listtool.add(name + repeat);
		repeat++;
		}
		MODID = modid;
		setuptools();
	}

	private void setuptools() {
		//Set set = new Set();
		pickaxe = new UtilsToolset(5, toolMaterial.EMERALD, this, "indigoutilstool" + MODID + 1, MODID);
		listitem.add(pickaxe);
		axe = new UtilsToolset(5, toolMaterial.EMERALD, this, "indigoutilstool" + MODID+ 2, AlloycraftMain.modid);
		listitem.add(axe);
		hoe = new UtilsToolset(5, toolMaterial.EMERALD, this, "indigoutilstool" + MODID + 3, AlloycraftMain.modid);
		listitem.add(hoe);
		shovel = new UtilsToolset(5, toolMaterial.EMERALD, this, "indigoutilstool" + MODID + 4, AlloycraftMain.modid);
		listitem.add(shovel);
		sword = new UtilsToolset(5, toolMaterial.EMERALD, this, "indigoutilstool" + MODID + 5, AlloycraftMain.modid);
		listitem.add(sword);
		
	}

	public UtilsToolset(float p_i45333_1_, Item.ToolMaterial p_i45333_2_, Set p_i45333_3_) {
		super(p_i45333_1_, p_i45333_2_,p_i45333_3_);
		// TODO Auto-generated constructor stub
	}
	
	/**
	 * Method that starts the automatic registration of items and armor.
	 * Call in init method
	 * See:{@link UtilsMain.init}
	 */
	public static void register() {
		
		while(runtime < listitem.size()){
		GameRegistry.registerItem((Item) itemlists.get(runtime), ("indigoapi" + runtime));
		runtime++;
		}
	}

	@Override
	public int size() {
		// TODO Auto-generated method stub
		return 0;
	}

	@Override
	public boolean isEmpty() {
		// TODO Auto-generated method stub
		return false;
	}

	@Override
	public boolean contains(Object o) {
		// TODO Auto-generated method stub
		return false;
	}

	@Override
	public Iterator iterator() {
		// TODO Auto-generated method stub
		return null;
	}

	@Override
	public Object[] toArray() {
		// TODO Auto-generated method stub
		return null;
	}

	@Override
	public Object[] toArray(Object[] a) {
		// TODO Auto-generated method stub
		return null;
	}

	@Override
	public boolean add(Object e) {
		// TODO Auto-generated method stub
		return false;
	}

	@Override
	public boolean remove(Object o) {
		// TODO Auto-generated method stub
		return false;
	}

	@Override
	public boolean containsAll(Collection c) {
		// TODO Auto-generated method stub
		return false;
	}

	@Override
	public boolean addAll(Collection c) {
		// TODO Auto-generated method stub
		return false;
	}

	@Override
	public boolean retainAll(Collection c) {
		// TODO Auto-generated method stub
		return false;
	}

	@Override
	public boolean removeAll(Collection c) {
		// TODO Auto-generated method stub
		return false;
	}

	@Override
	public void clear() {
		// TODO Auto-generated method stub
		
	}
	

}
