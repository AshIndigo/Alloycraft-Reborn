package com.ashindigo.alloycraft;

import com.ashindigo.utils.UtilsItem;
import com.ashindigo.utils.UtilsItemBlockLoader;
import com.ashindigo.utils.UtilsToolset;

import net.minecraft.item.Item.ToolMaterial;
import net.minecraft.item.ItemArmor.ArmorMaterial;
import net.minecraftforge.common.util.EnumHelper;

public class AlloycraftItems extends UtilsItemBlockLoader {
	
	public static UtilsItem test;
	public static UtilsToolset.UtilsAxe axetest;
	public static UtilsToolset.UtilsSword swordtest;
	static UtilsItem item = new UtilsItem();
	static UtilsToolset tools = new UtilsToolset();
	public static ToolMaterial Testmat = EnumHelper.addToolMaterial("Testmat", 2, 400, 5.5F, 2.5F, 30);
	public static ArmorMaterial ARMORGOLDIRON = EnumHelper.addArmorMaterial("GoldIron", 14, new int[] {2, 6, 4, 2}, 30);
	private static UtilsItem.UtilsArmor goldironhelmet;
	
	public static void preInitItems() {
		
		test = new UtilsItem(AlloycraftMain.modid, "testitemwow");
		goldironhelmet = new UtilsItem.UtilsArmor("armor", ARMORGOLDIRON, 0, AlloycraftMain.modid);
		item.itemlists.add(test);
		item.itemlists.add(goldironhelmet);
		axetest = new UtilsToolset.UtilsAxe(Testmat, "axetests", AlloycraftMain.modid);
		swordtest = new UtilsToolset.UtilsSword(Testmat, "axetests", AlloycraftMain.modid);
		tools.toollists.add(test);
		tools.itemlists.add(goldironhelmet);
		
		
	}

	public static void initItems() {
		// TODO Auto-generated method stub
		
	}
	
	public static void postInitItems() {
		// TODO Auto-generated method stub
		
	}

}
