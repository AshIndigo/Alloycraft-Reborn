package com.ashindigo.utils;

import java.util.ArrayList;

import cpw.mods.fml.common.registry.GameRegistry;
import net.minecraft.block.Block;
import net.minecraft.block.material.Material;
import net.minecraft.creativetab.CreativeTabs;
import net.minecraft.init.Items;
import net.minecraft.item.Item;
import net.minecraft.item.ItemStack;

public class UtilsBlockOre extends UtilsBlock{

	public static Item Ingot;
	public static Block Ore;
	public static ArrayList orelist = new ArrayList();

	public UtilsBlockOre(Material mat, Item ingot, Block ore) {
		super(mat);
		Ingot = ingot;
		Ore = ore;
	}
	
	public UtilsBlockOre(Material mat) {
		super(mat);
	}

	public static void registerRecipes(){
		int oreruntime = 0;
		while(oreruntime < orelist.size()){
		GameRegistry.addSmelting(Ore, new ItemStack (Ingot, 1), 5);
		oreruntime++;
	}
	}
}

