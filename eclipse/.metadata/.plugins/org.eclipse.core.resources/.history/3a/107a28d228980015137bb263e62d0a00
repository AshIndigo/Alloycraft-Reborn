package com.ashindigo.test;

public class BottlesSong {
	
	static int bottles = 69;
	static int bottlesfinal = bottles;
	static String word = "WOW";

	public static void main(String[] args) {
		
		run();
	}

	public static void run() {
		
		while (bottles != 1) {
			System.out.println(bottles + " " + word + " of beer on the wall, " + bottles + " " + word + " of beer.");
			bottles--;
			System.out.println("Take one down, pass it around, " + bottles + " of beer on the wall.");
		}
		System.out.println(bottles + " bottle of beer on the wall, " + bottles + " bottle of beer.");
		bottles--;
		System.out.println("Take one down, pass it around, " + bottles + " bottles of beer on the wall.");
		System.out.println("No more bottles of beer on the wall, no more bottles of beer.");
		System.out.println("Go to the store and buy some more, " + bottlesfinal + " bottles of beer on the wall...");
	}

}
