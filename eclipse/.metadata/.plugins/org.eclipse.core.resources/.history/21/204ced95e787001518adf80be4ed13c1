package com.ashindigo.alloycraft;

import java.lang.reflect.Array;
import java.util.ArrayList;

import com.ashindigo.utils.UtilsArmor;
import com.ashindigo.utils.UtilsItem;
import com.ashindigo.utils.UtilsItemBlockLoader;
import com.ashindigo.utils.UtilsToolset;

import net.minecraft.item.Item;
import net.minecraft.item.Item.ToolMaterial;
import net.minecraft.item.ItemArmor.ArmorMaterial;
import net.minecraftforge.common.util.EnumHelper;

public class AlloycraftItems extends UtilsItemBlockLoader {
	
	public static UtilsItem test;
	public static UtilsToolset.UtilsAxe axetest;
	public static UtilsToolset.UtilsSword swordtest;
	static UtilsItem item = new UtilsItem();
	static UtilsToolset tools = new UtilsToolset();
	public static ToolMaterial Testmat = EnumHelper.addToolMaterial("Testmat", 2, 400, 5.5F, 2.5F, 30);
	public static ArmorMaterial ARMORGOLDIRON = EnumHelper.addArmorMaterial("GoldIron", 14, new int[] {2, 6, 4, 2}, 30);
	public static UtilsArmor goldironhelmet;
	public static UtilsArmor goldironchestplate;
	public static UtilsArmor goldironleg;
	public static UtilsArmor goldironboot;
	public static UtilsArmor goldironhelmet2;
	static UtilsArmor armor = new UtilsArmor(ARMORGOLDIRON, 0, 0);
	
	public static void preInitItems() {
		
		test = new UtilsItem(AlloycraftMain.modid, "testitem");
		goldironhelmet = new UtilsArmor("armor", ARMORGOLDIRON, 0, AlloycraftMain.modid, test);
		goldironchestplate = new UtilsArmor("armorchest", ARMORGOLDIRON, 1, AlloycraftMain.modid, test);
		goldironleg = new UtilsArmor("armorleg", ARMORGOLDIRON, 2, AlloycraftMain.modid, test);
		goldironboot = new UtilsArmor("armorboot", ARMORGOLDIRON, 3, AlloycraftMain.modid, test);
		axetest = new UtilsToolset.UtilsAxe(Testmat, "axetest", AlloycraftMain.modid, test);
		swordtest = new UtilsToolset.UtilsSword(Testmat, "swordtest", AlloycraftMain.modid, test);
		UtilsArmor.armorlist.add(goldironhelmet);
		UtilsArmor.armorlist.add(goldironchestplate);
		UtilsArmor.armorlist.add(goldironleg);
		UtilsArmor.armorlist.add(goldironboot);
		UtilsArmor.armorlist.add(goldironhelmet2);
	}

