package com.ashindigo.utils;

import java.util.ArrayList;

import cpw.mods.fml.common.registry.GameRegistry;
import net.minecraft.creativetab.CreativeTabs;
import net.minecraft.item.Item;
import net.minecraft.item.ItemArmor;

public class UtilsArmor extends ItemArmor {

	public UtilsArmor(ArmorMaterial p_i45325_1_, int p_i45325_2_, int p_i45325_3_) {
		super(p_i45325_1_, p_i45325_2_, p_i45325_3_);
		// TODO Auto-generated constructor stub
	}
	
	/**
	 * Method that starts the automatic registration of items.
	 * Call in init method
	 * See:{@link UtilsMain.init}
	 */
	public static void register() {
		
		while(runtime < listitem.size()){
		GameRegistry.registerItem((Item) itemlists.get(runtime), ("indigoapi" + runtime));
		runtime++;
		}
}
}
