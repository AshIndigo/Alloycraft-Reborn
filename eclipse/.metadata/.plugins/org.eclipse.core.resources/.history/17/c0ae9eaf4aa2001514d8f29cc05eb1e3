package com.ashindigo.test;

import java.util.Scanner;

public class ConverterMain {
	
	static Scanner scanner = new Scanner(System.in);
	static int mode = -1;

	public static void main(String[] args) {
		
		run();

	}

	public static void run() {
		System.out.println("Hello and welcome to the Converter.");
		System.out.println("Please enter your selection");
		mode = scanner.nextInt();
		switch (mode) {
		case 0: intToString(); break;
		case 1: stringToInt(); break;
		case 2: integerToString(); break;
		case 3: stringToInteger(); break;
		case 4: longToString(); break;
		case 5: stringToLong(); break;
		case 6: doubleToString(); break;
		case 7: stringToDouble(); break;
		}
		
	}
}
